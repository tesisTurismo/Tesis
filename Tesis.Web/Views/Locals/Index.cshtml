@model IEnumerable<Tesis.Comun.Modelo.Local>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.categoriafk.nombreCat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.foto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombreLocal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pagWeb)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.categoriafk.nombreCat)
        </td>
        <td>
            @if (!string.IsNullOrEmpty(item.foto))
            {
                <img src="@Url.Content(item.foto)" alt="Image" style="width:100px;height:150px;max-width:100%;height:auto;" />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombreLocal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pagWeb)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idLocal }) |
            @Html.ActionLink("Details", "Details", new { id=item.idLocal }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idLocal })
        </td>
    </tr>
}

</table>
