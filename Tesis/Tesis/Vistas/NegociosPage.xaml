<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tesis.Vistas.NegociosPage"
             BindingContext="{Binding Main,Source={StaticResource localizador}}"
             Title="Negocios">
    <ContentPage.Content>
        <!--binding Vista Principal/negocios-->
        <StackLayout BindingContext="{Binding Negocios}" Padding="5">
            <!--binding Negocios Vista Modelo-->
            <ListView ItemsSource="{Binding Locales}"
                      HasUnevenRows="True"
                      IsRefreshing="{Binding IsRefreshing}" 
                      RefreshCommand="{Binding RefreshCommand}" 
                      IsPullToRefreshEnabled="True">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    
                                   
                                </Grid.ColumnDefinitions>
                                <Image 
                                    Grid.Column="0"

                                    Source="{Binding fotoApp}" 
                                    WidthRequest="100"
                                    HeightRequest="100">

                                </Image>
                                <StackLayout Grid.Column="1"  VerticalOptions="Center" >
                                    <Label  
                                       FontAttributes="Bold" 
                                        TextColor="Black"
                                       Text="{Binding nombreLocal}"
                                       FontSize="18">


                                    </Label>
                                    <Label 
                                       FontAttributes="Bold"  
                                       Text="{Binding descripcion}"
                                       FontSize="Medium" >
                                    </Label>
                                </StackLayout>

                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>


            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>